{
	"name": "discord-rpc",
	"displayName": "Discord Rich Presence",
	"description": "A simple, opinionated Discord rich presence extension",
	"repository": {
		"type": "git",
		"url": "https://github.com/ItsPi3141/vsc-discord-rpc"
	},
	"license": "AGPL-3.0",
	"publisher": "ItsPi3141",
	"version": "0.1.0",
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "yarn run build",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"build": "yarn run check-types && node esbuild.js --production",
		"package": "vsce package --no-yarn",
		"check-types": "tsc --noEmit"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "^20.17.30",
		"@types/vscode": "^1.99.1",
		"@vscode/vsce": "^3.3.2",
		"esbuild": "^0.25.2",
		"npm-run-all": "^4.1.5",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"minimal-discord-rpc": "^1.0.2"
	},
	"packageManager": "yarn@4.7.0",
	"engines": {
		"vscode": "^1.99.1"
	},
	"categories": ["Other"],
	"activationEvents": ["onStartupFinished"],
	"contributes": {
		"commands": [
			{
				"command": "discord-rpc.enable",
				"title": "Enable",
				"category": "Discord Rich Presence"
			},
			{
				"command": "discord-rpc.disable",
				"title": "Disable",
				"category": "Discord Rich Presence"
			}
		]
	}
}
