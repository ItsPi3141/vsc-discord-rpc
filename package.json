{
  "name": "discord-rpc",
  "displayName": "Discord RPC",
  "description": "A simple, opinionated Discord rich presence extension",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ItsPi3141/vsc-discord-rpc"
  },
  "license": "MIT",
  "publisher": "ItsPi3141",
  "version": "0.1.1",
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "build": "yarn run check-types && node esbuild.js --production",
    "package": "vsce package --no-yarn",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.32",
    "@types/vscode": "^1.101.0",
    "@vscode/vsce": "^3.5.0",
    "esbuild": "^0.25.5",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "minimal-discord-rpc": "^1.0.4"
  },
  "packageManager": "yarn@4.9.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "keywords": [
    "discord",
    "rich",
    "presence",
    "rpc",
    "status"
  ],
  "categories": [
    "Visualization",
    "Other"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "galleryBanner": {
    "color": "#5865F2",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ]
}
